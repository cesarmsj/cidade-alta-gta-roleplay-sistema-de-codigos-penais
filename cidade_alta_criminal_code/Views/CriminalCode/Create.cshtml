@model cidade_alta_criminal_code.Data.Dtos.CriminalCodeDto.CreateCriminalCodeDto

@{
    ViewData["Title"] = "Cadastro de Código Penal";
}

@if (ViewBag.Message == "success")
{
    <span class="text-success">Código Penal cadastrado com sucesso</span>
}
else if (ViewBag.Message == "fail")
{
    <span class="text-danger">Falha ao tentar cadastrar novo código penal</span>
}

<h1>Cadastro de Código Penal</h1>

<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-controller="CriminalCode" asp-action="CreateCriminalCode" method="post" enctype="multipart/form-data" style="margin-top: 10px">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descrição</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Penalty" class="control-label">Penalidade</label>
                <input asp-for="Penalty" class="form-control" />
                <span asp-validation-for="Penalty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrisionTime" class="control-label">Tempo de Prisão</label>
                <input asp-for="PrisionTime" class="form-control" />
                <span asp-validation-for="PrisionTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="StatusId" class="control-label">Status</label>
                <select asp-for="StatusId" class ="form-control">
                    @foreach (var item in ViewBag.Status) {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Códigos Penais</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
