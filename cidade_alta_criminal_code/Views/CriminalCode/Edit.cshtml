@model cidade_alta_criminal_code.Data.Dtos.CriminalCodeDto.UpdateCriminalCodeDto

@{
    ViewData["Title"] = "Editar Código Penal";
}

<h1>Atualizar Código Penal</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="CriminalCode" asp-action="Edit" method="post">
            <input type="hidden" name="criminalCodeId" value="@ViewBag.CriminalCode.Id" />
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label mb-1">Nome</label>
                <input asp-for="Name" class="form-control" value="@ViewBag.CriminalCode.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description" class="control-label mb-1">Descrição</label>
                <input asp-for="Description" class="form-control" value="@ViewBag.CriminalCode.Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Penalty" class="control-label">Penalidade</label>
                <input asp-for="Penalty" class="form-control" data-val="true" data-val-number="O campo penalidade deve ser um número" value="@ViewBag.CriminalCode.Penalty.ToString().Replace(',','.')" />
                <span asp-validation-for="Penalty" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PrisionTime" class="control-label mb-1">Tempo de Prisão (0-30)</label>
                <input asp-for="PrisionTime" class="form-control" value="@ViewBag.CriminalCode.PrisionTime" />
                <span asp-validation-for="PrisionTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="StatusId" class="control-label mb-1">Status</label>
                <select asp-for="StatusId" class ="form-control">
                    <option value="@ViewBag.CriminalCode.Status.Id" selected>@ViewBag.CriminalCode.Status.Name</option>
                    @foreach (var item in ViewBag.Status) {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Códigos Penais Cadastrados</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
